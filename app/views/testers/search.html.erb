<% if @testers.present? %>
  <div class="text-center alert alert-success">
    Testers based on your criteria
    <strong>Countries: <%= params[:countries] %>, Devices: <%= params[:devices] %></strong>
    and sorted by bugs reported.
  </div>
  <table class="table table-striped text-center">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Country</th>
      <th scope="col"># Bugs reported</th>
    </tr>
    </thead>
    <tbody>

    <% @testers.each.with_index do |tester, i| %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= tester.first_name %></td>
        <td><%= tester.last_name %></td>
        <td><%= tester.country %></td>
        <td><%= tester.bugs_count %></td>
      </tr>
    <%end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-warning text-center" role="alert">
    Could not find any tester for your criteria. Trust me, I looked everywhere!
  </div>
<% end %>

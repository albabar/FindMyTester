<div class="row">
  <div class="col-md-8 offset-2">
    <%= form_with url: search_path, method: :get, class: 'row g-3 align-items-center' do |form| %>
      <div class="col-5">
        <%= form.select :countries, countries_list, { selected: params[:countries] }, class: 'form-select' %>
      </div>
      <div class="col-5">
        <%= form.select :devices, devices_list, { selected: params[:devices] }, class: 'form-select' %>
      </div>

      <div class="col-1">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    <% end %>
  </div>
</div>

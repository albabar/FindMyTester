<div class="row">
  <div class="col-md-8 offset-2">
    <%= form_with url: search_path, method: :get, class: 'row g-3 align-items-center' do |form| %>
      <div class="col-5">
        <%= form.label :countries, 'Countries' %>
        <%= form.select :countries, countries_list, { selected: params[:countries] },
                        multiple: true, class: 'form-select select2', data: { placeholder: 'All Countries' } %>
      </div>
      <div class="col-5">
        <%= form.label :devices, 'Devices' %>
        <%= form.select :devices, devices_list, { selected: params[:devices] },
                        multiple: true, class: 'form-select select2', data: { placeholder: 'All Devices' } %>
      </div>

      <div class="col-1">
        <label></label>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    <% end %>
  </div>
</div>
